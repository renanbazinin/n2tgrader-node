{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nand2tetris/projects/*": ["./projects/build/*"],
      "@nand2tetris/runner/*": ["./runner/build/*"],
      "@nand2tetris/simulator/*": ["./simulator/build/*"]
    }
  },
  "include": ["src/**/*", "projects/build/**/*", "runner/build/**/*", "simulator/build/**/*"]
}
